<div class="categories-menu">
  <div class="favicon-img">
    <%= link_to root_path do %>
      <%= image_tag "roche2", alt: "Laura Cattabianchi", class: "navbar-roche" %>
    <% end %>
  </div>
  <div class="link-to-collapse">
    <a  class=""
        data-toggle="collapse"
        data-target=".collapse.first"
        data-text="Collapse">
        palomitas
    </a>
  </div>
  <div>|</div>
  <div class="current-category">
    <%= link_to "#{@article.category}s", category_path(category: @article.category) %>
  </div>
</div>
<div class="block collapse first">
    <div class="block__content">
    <%= render "pages/home" %>
  </div>
</div>
<div class="article-view <%#= @article.category%>">
  <h1><%= @article.title %></h1>
  <h3><%= @article.subtitle %></h3>
  <% if @article.category == 'Actualité' %>
    <p class="posted-date"><%=  @article.created_at.strftime("Posted on %m/%d/%Y") %></p>
  <% end %>
  <%#= cl_image_tag @article.photo.key%>
  <% if @article.legend %>
    <p class="legend">
      <%= @article.legend %>
    </p>
  <% end %>
  <p><%= @article.content %></p>
  <% if @article.category == 'Formation' || @article.category == 'Atelier' %>
    <%= link_to new_contact_path do  %>
      <p class="btn btn-outline-dark contact-link-show">✏️ Vous voulez plus d'infos ? Ecrivez moi ! ✉️</p>
    <% end %>
  <% end %>
</div>
