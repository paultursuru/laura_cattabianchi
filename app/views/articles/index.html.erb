<%= render "pages/adminbar" %>


<div class="flex-article-list admin-mt">
  <% @articles.each do |article| %>
    <div class="article_card" style=" url('<%= cl_image_path article.photo.key, height: 200, width: 200, crop: :fill %>')">
      <h5><%= article.title %></h5>
      <div class="d-block action-block">
        <div class="action-butn"><%= link_to "✏️", edit_article_path(article)  %></div>
        <div class="action-butn"><%= link_to "🗑", article_path(article), method: :delete, data: {confirm: "sei sicuro ?"} %></div>
      </div>
    </div>
  <% end %>
</div>
